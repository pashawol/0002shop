mixin top-line()
	// start .top-line
	+b.top-line.block-with-lazy
		+e.head
			.container.d-sm-none.text-center
				+e.logo(href="#")
							img(src="img/logo.png", alt="")
							+e.logo-text
								strong Abwasser
								| hebeanlage.com
			.container.d-none.d-sm-flex
				+e.link-top(href='#') Kostenloser Versand ab 49â‚¬ 
				+e.link-top(href='#') Schnelle & sichere Lieferung mit DHL 
				+e.link-top(href='#') Hilfe & Kontakt
				+b.toggle-menu-mobile--js.d-lg-none
					span
		+e.body
			.container
				.row
					.col-md-auto.col.align-self-center.d-sm-none
						+b.toggle-menu-mobile--js
							span
					.col-md-auto.col.align-self-center.d-none.d-sm-block
						+e.logo(href="#")
							img(src="img/logo.png", alt="")
							+e.logo-text.d-none.d-lg-block
								strong Abwasser
								| hebeanlage.com
					.col.align-self-center.d-none.d-md-block
						+b.form-search
							form
								input(type="text")
								button
					.col-auto.align-self-end
						.row
							.col-auto
								+e.link(href="#")
									.icon-wrap
										+icon("web")
									+e.link-text.d-none.d-sm-block DE  
							.col-auto
								+e.link(href="#")
									.icon-wrap
										+icon("user")
									+e.link-text.d-none.d-lg-block Anmelden
							.col-auto
								+e.link(href="#")
									.icon-wrap
										+icon("mark")
									+e.link-text.d-none.d-lg-block Einbaupartner suchen  
							.col-auto
								+e.link--basket(href="#")
									.icon-wrap
										+icon("basket")
										.counter 1
									+e.link-text.d-none.d-lg-block Warenkorb
			+mob-mnu()
	// end .top-line